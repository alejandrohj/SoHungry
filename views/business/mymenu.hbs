{{> restaurantNavBar this}}
<div class="addDishForm">
    <h3>Add a new dish to the Menu:</h3>
    <form method="POST" action="/business/addDish" class="form-inline" >
    <div class="form-group">
        <label for="dishname">Dish Name:</label>
        <input name="name" type="text" class="form-control" id="dishname" placeholder="Dish name here">
    </div>
    <div class="form-group">
        <label for="dishprice">Dish Price:</label>
        <input name="price" type="number" class="form-control" id="dishprice" placeholder="Dish price">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
<hr>
{{#if errorMessage}}
<div>{{errorMessage}}</div>
{{/if}}

{{#each restaurantInfo.menu}}
    <div class="card" style="width: 18rem;">
        {{!-- <img class="card-img-top" src="{{this.name}}" alt="restaurantimage cap">  --}}
        <div class="card-body">
            <form method="POST" action="/business/editDish/{{this._id}}" class="form-inline" >
                <div class="form-group">
                    <input name="name" type="text" class="form-control card-title" id="dishname" value="{{this.name}}">
                </div>
                <div class="form-group">
                    <input name="price" type="number" class="form-control card-text" id="dishprice" value= "{{this.price}}"><span>â‚¬</span>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
                <a href="/business/delete/{{this._id}}" class="btn btn-primary btn-red">Delete</a>
        </div>
    </div>
{{/each}}
